<h1>Edit task</h1>

<%= form_for(@task) do |f| %>
<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: "labels" %>
</div>

<div class="form-group">
  <%= f.label :details %>
  <%= f.text_field :details, class: "labels" %>
</div>
<%= f.check_box :completed%> Completed
<div class="button_update">
  <%= f.submit 'Update Task', class: "btn" %>
</div>
<% end %>

<hr>

<div class="retour">
  <%= link_to "Back to list", tasks_path(@task)%>
</div>
