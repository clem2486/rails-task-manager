<h1><%= @task.title%></h1>

<div class="edit-task">
<img src="https://img.icons8.com/ios/50/000000/pencil-tip.png"><%= link_to "Edit this task", edit_path(@task)%>
</div>


<div class="details">
<h2><%= @task.details%></h2>
</div>

<% if @task.completed%>
<img src="https://img.icons8.com/ios/30/000000/checked-checkbox.png">This task is completed
<% else%>
<img src="https://img.icons8.com/ios/30/000000/unchecked-checkbox.png">This task is not completed yet
<% end%>

<div class="retour">
  <%= link_to "Back to list", tasks_path(@task)%>
</div>

