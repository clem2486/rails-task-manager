<h1>My tasks</h1>
  <ol>
<% @tasks.each do |task|%>
<li>
<% if task.completed%>
<img src="https://img.icons8.com/ios/30/000000/checked-checkbox.png">
<% else%>
<img src="https://img.icons8.com/ios/30/000000/unchecked-checkbox.png">
<% end%>
<%= link_to task.title, task_path(task)%>
</li>
<% end%>
 </ol>
<hr>
 <div class="add_new">
 <img src="https://img.icons8.com/office/16/000000/plus-math.png"><%= link_to "Add a new task", tasks_new_path(@task)%>
 </div>



