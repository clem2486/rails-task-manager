<h1>New task</h1>

<%= form_for(@task) do |f| %>
<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: "labels" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :details %>
  <%= f.text_field :details, class: "labels" %>
  </div>
</div>

  <%= f.submit 'Create Task', class: "btn" %>
<% end %>

<hr>

<div class="retour">
  <%= link_to "Back to list", tasks_path(@task)%>
</div>


